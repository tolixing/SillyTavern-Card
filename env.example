# SillyTavern 角色卡中心 - 环境变量配置

# 应用配置
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# 文件存储配置
# 数据目录路径
DATA_DIR=./data
# 上传文件大小限制（字节）
MAX_FILE_SIZE=52428800
# 允许的文件类型
ALLOWED_FILE_TYPES=image/png

# 安全配置
# JWT 密钥（如果使用认证）
# JWT_SECRET=your-secret-key-here
# 会话密钥
# SESSION_SECRET=your-session-secret-here

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 开发配置
# ENABLE_DEBUG=false

# 管理员认证配置（可选，若启用认证）
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=admin123

# JWT配置（可选）
# JWT_SECRET=your-secret-key-change-this-in-production
# JWT_EXPIRES_IN=24h

# 前端批量上传并发配置（仅客户端可读，需 NEXT_PUBLIC 前缀）
NEXT_PUBLIC_BATCH_UPLOAD_CONCURRENCY=3
